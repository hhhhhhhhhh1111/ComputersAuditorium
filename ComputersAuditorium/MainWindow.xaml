<Window x:Class="ComputersAuditorium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ComputersAuditorium"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800" MinHeight="600" MinWidth="800" Background="#FFFFF2D5">
    <Grid Height="600" Width="800">
        <TextBlock Text="Информация о компьютерах в аудиториях" FontSize="22" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Height="44" Margin="0,56,0,0"/>
        <DataGrid x:Name="AuditoriumGrid" AutoGenerateColumns="False" IsReadOnly="True" Margin="10,143,23,0" VerticalAlignment="Top" HeadersVisibility="Column" GridLinesVisibility="All" RowHeight="30" Height="383">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Аудитория" Binding="{Binding Name}" Width="*" />
                <DataGridTextColumn Header="Компьютеры" Binding="{Binding ComputersAvailable}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
